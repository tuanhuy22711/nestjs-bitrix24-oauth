# Environment Configuration

# Server Configuration
PORT=3000
NODE_ENV=development

# Bitrix24 OAuth 2.0 Configuration
BITRIX24_CLIENT_ID=your_local_app_client_id
BITRIX24_CLIENT_SECRET=your_local_app_client_secret
BITRIX24_DOMAIN=your-company.bitrix24.com
BITRIX24_REDIRECT_URI=https://your-ngrok-domain.ngrok.io/oauth/callback

# Database Configuration
DATABASE_PATH=./data/tokens.db

# Security
ENCRYPTION_KEY=your-secret-encryption-key-here

# ngrok Configuration (for reference)
NGROK_DOMAIN=https://your-ngrok-domain.ngrok.io

# Logging Configuration
LOG_LEVEL=info
LOG_FILE=./logs/app.log

# API Configuration
BITRIX24_API_TIMEOUT=10000
BITRIX24_API_RETRY_ATTEMPTS=3
BITRIX24_API_RETRY_DELAY=1000
